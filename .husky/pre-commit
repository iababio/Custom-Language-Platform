CHANGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|jsx|ts|tsx)$' || true)

if [ -n "$CHANGED_FILES" ]; then
  TEMP_FILE=$(mktemp)
  echo "$CHANGED_FILES" > "$TEMP_FILE"

  xargs pnpm test -- --bail --findRelatedTests < "$TEMP_FILE"
  TEST_STATUS=$?

  rm "$TEMP_FILE"

  if [ $TEST_STATUS -ne 0 ]; then
    echo "❌ Tests failed! Please fix the failing tests before committing."
    exit 1
  fi
else
  echo "ℹ️ No relevant files changed. Skipping tests."
fi
